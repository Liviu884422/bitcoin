body
  font-family 'Consolas'
  background-color lighten(lavender,50%)
  font-size 10px

.container
  font-size 1rem
  margin-top 7rem
  padding-top 1rem
  .buttons-container
    background-color white
    padding 1rem 2rem
    padding-bottom 5px
    border 2px solid darken(#200000,80)
    border-radius 150px
    .form-group
         font-family Arial
         margin-left 0%
         text-align center
      .btn.btn-primary
         border-radius 15px
         color white  
         font-size 1.2em 
      .btn.btn-primary.register
         font-size 0.8em  
  .prime-header
    text-align center
    padding 2px
    background-color #700000
    color #E0E0E0
    margin-bottom 4rem
footer
  text-align center
  border-top 1px dotted black
  padding 5px
  margin-top 12rem
  background-color #700000 
  color #E0E0E0
  font-size 12px
