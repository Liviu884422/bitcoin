doctype
html
  head
    title Login Page
    link(rel='stylesheet',href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet',href='/stylesheets/style.css')
    script(src='/javascripts/external_scripts/jquery.min.js')
    script(src='/javascripts/external_scripts/bootstrap.min.js')
  body
    .container
      .row
        .col-md-6.col-md-offset-3
         .main-wrapp
          form.form-signin(,action="/login",method="post")
            .form-group
              input.form-control(type="email",name="email",placeholder='Your Email')
            .form-group
              input.form-control(type="password",name="password",placeholder='Your Password')
            .form-group
              input.btn.btn-primary.clickx2-button(type="submit", value="Log in")
            .form-group
              a.btn.btn-primary(href='/signup') No account? Sign up!
              if err
                p #{err}